<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/month_grid_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/android_gridview_image_day"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <ImageView
        android:id="@+id/android_gridview_image_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/android_gridview_image_day"
        android:layout_alignTop="@id/android_gridview_image_day"
        android:layout_alignRight="@id/android_gridview_image_day"
        android:layout_alignBottom="@id/android_gridview_image_day"
        android:gravity="center"/>

    <TextView
        android:id="@+id/android_gridview_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_alignLeft="@id/android_gridview_image_day"
        android:layout_alignTop="@id/android_gridview_image_day"
        android:layout_alignRight="@id/android_gridview_image_day"
        android:layout_alignBottom="@id/android_gridview_image_day"
        android:gravity="center"/>
</RelativeLayout>